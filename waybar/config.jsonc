        "format-icons": ["ï«", "ï‹‰", "ï©"],
        "interval": 5,
        "format": "<span size='xx-large'>{icon}</span>",
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["î", "î“", "î‘", "î", "î", "î", "îŠ", "îˆ", "î›"]
    },
    "battery": {
        "interval": 10,
        "states": {
            // "good": 95,
            "critical": 15
        },
        "format": "<span size='xx-large'>{icon}</span>",
        "format-charging": "ï—§",
        "format-plugged": "ï‡¦",
        "format-time": "{H}:{m}",
        "tooltip-format": "{time} {capacity}%",
        "format-icons": ["ï‰„", "ï‰ƒ", "ï‰‚", "ï‰", "ï‰€"]
