{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 16, // Waybar height (to be removed for auto height)
    "margin": 0,
    //"width": 1280, // Waybar width
    "spacing": 5, // Gaps between modules (4px)
    "border-size": 2,
    "padding": 10,
    "fixed-center": true,
    //"reload_style_on_change": true,
    // Choose the order of the modules
    "modules-left": ["sway/workspaces","hyprland/workspaces","tray"],
    "modules-center": ["clock"],
    "modules-right": ["pulseaudio","pulseaudio/slider","backlight","backlight/slider","network","cpu","memory","temperature","battery"],
    // Modules configuration
    "hyprland/workspaces": {
          "disable-scroll": true,
          "all-outputs": true,
          "warp-on-scroll": false,
          "active-only": false,
          "sort-by-number": true,
          "format": "{name}",
    //    "format-icons": {
    //         "1": "ÔÑ†",
    //         "2": "Ôâ®",
    //         "3": "ÔÑ°",
    //         "4": "ÔÜº",
    //         "5": "ÔÅµ",
    //         "urgent": "ÔÅ™",
    //         "focused": "ÔÜí",
    //         "default": "ÔÑë"
    //    }
    }, 
    "sway/workspaces": {
          "disable-scroll": true,
          "all-outputs": true,
          "warp-on-scroll": false,
          "active-only": false,
          "sort-by-number": true,
          "format": "{name}",
    //    "format-icons": {
    //         "1": "ÔÑ†",
    //         "2": "Ôâ®",
    //         "3": "ÔÑ°",
    //         "4": "ÔÜº",
    //         "5": "ÔÅµ",
    //         "urgent": "ÔÅ™",
    //         "focused": "ÔÜí",
    //         "default": "ÔÑë"
    //    }
    },
    "tray": {
        "icon-size": 14,
        "spacing": 14,
    },
    "cava": {
      "framerate":24,
    },
    "clock": {
        "interval": 1,
        "format": "{:%d.%m.%y %a ‚ù¶ %H:%M}",
        "tooltip-format": "{calendar}",
        "format-alt": "{:%Z (%Ez from UTC)}",
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format":                 "<span size='x-large'>{icon} {format_source}</span>",
        "format-bluetooth":       "<span size='x-large'>Ôäî{icon} {format_source}</span>",
        "format-bluetooth-muted": "<span size='x-large'>Ôäî{icon}Ôö©  {format_source}</span>",
        "format-muted":           "<span size='x-large'>Ôö©{format_source}</span>",
        "tooltip-format":         "{desc}\n{volume}%",
        "format-source":          "ÔÑ∞",
        "format-source-muted":    "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": ["ÔÄ¶", "ÔÄß", "ÔÄ®"]
        },
        "on-click": "pavucontrol"
    },
    "pulseaudio/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal",
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "<span size='x-large'>{icon}</span>",
        "format-icons": ["Óéç", "Óèì", "Óèë", "Óèè", "Óèé", "Óèç", "Óèä", "Óèà", "Óéõ"],
        "tooltip-format": "{percent}%",
    },
    "backlight/slider": {
        "min": 0,
        "max": 100,
        "orientation": "horizontal",
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "<span size='x-large'>Ôá´</span>",
        "format-ethernet": "<span size='x-large'>Ôûñ</span>",
        "tooltip-format": "{ifname} Ôûñ via:\n{essid}\nIP: {ipaddr}\nGateway: {gwaddr}\nSubnetmask: {netmask}\nStrength (%/dBm): {signalStrength}/{signaldBm}\nByte Speed (D|U): {bandwidthDownBytes} | {bandwidthUpBytes}",
        "format-linked": "{ifname} (No IP) Ôûñ",
        "format-disconnected": "<span size='x-large'>Ôïß</span>",
        "interval": 5,
        "on-click": "nm-connection-editor"
    },
    "cpu": {
        "interval": 10,
        "format": "<span size='x-large'>Ôãõ</span>",
        "tooltip-format": "{avg_frequency}GHz",
        "states": {
            "critical": 75,
            "high": 40,
            "normal": 0,
        },
    },
    "memory": {
        "interval": 10,
        "format": "<span size='x-large'>ÔÉâ</span>",
        "tooltip-format": "{percentage}% {used}G/{total}G\nSwap: {swapPercentage}% {swapUsed}G/{swapTotal}G",
        //"on-click": "htop"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}¬∞C {icon}",
        // "format": "{temperatureC}¬∞C {icon}",
        "format-icons": ["Ôù´", "Ôãâ", "Ôù©"],
        "interval": 5,
        "format": "<span size='x-large'>{icon}</span>",
    },
    "battery": {
        "interval": 10,
        "states": {
            // "good": 95,
            "critical": 15
        },
        "format": "<span size='x-large'>{icon}</span>",
        "format-charging": "Ôóß",
        "format-plugged": "Ôá¶",
        "format-time": "{H}:{m}",
        "tooltip-format": "{time} {capacity}%",
        "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"]
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ÔÅÆ",
            "deactivated": "ÔÅ∞"
        },
        "toolltip": false,
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "ÔÜº",
            "default": "üéú"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    }
}
