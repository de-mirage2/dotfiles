{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 20, // Waybar height (to be removed for auto height)
    "margin": 0,
    "width": 1280, // Waybar width
    "spacing": 5, // Gaps between modules (4px)
    "border-size": 2,
    "padding": 10,
    "fixed-center": true,
    //"reload_style_on_change": true,
    // Choose the order of the modules
    "modules-left": ["hyprland/workspaces", "custom/player"],
    "modules-center": ["clock"],
    "modules-right": ["pulseaudio", "network", "cpu", "memory", "temperature", "keyboard-state", "battery", "tray"],
    // Modules configuration
    "hyprland/workspaces": {
          "disable-scroll": true,
          "all-outputs": true,
          "warp-on-scroll": false,
          "active-only": false,
          "sort-by-number": true,
          "format": "{name}",
    //    "format-icons": {
    //         "1": "ï„ ",
    //         "2": "ï‰¨",
    //         "3": "ï„¡",
    //         "4": "ï†¼",
    //         "5": "ïµ",
    //         "urgent": "ïª",
    //         "focused": "ï†’",
    //         "default": "ï„‘"
    //    }
    }, 

    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "ï€£",
            "unlocked": "ï‚œ"
        }
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "ï®",
            "deactivated": "ï°"
        },
        "toolltip": false,
    },
    "tray": {
        "icon-size": 14,
        "spacing": 14,
    },
    "clock": {
        "interval": 1,
        "format": "{:%a %d %b %H:%M:%S}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}",
    },
    "cpu": {
        "interval": 10,
        "format": "<span size='xx-large'>ï‹›</span>",
        "tooltip-format": "{usage}% {avg_frequency}GHz",
        "states": {
            "critical": 75,
            "high": 40,
            "normal": 0,
        },
    },
    "memory": {
        "interval": 10,
        "format": "<span size='xx-large'>ïƒ‰</span>",
        "tooltip-format": "{percentage}% {used}G/{total}G\nSwap: {swapPercentage}% {swapUsed}G/{swapTotal}G",
        //"on-click": "htop"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}Â°C {icon}",
