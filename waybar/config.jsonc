{
    "layer": "top", // Waybar at top layer
    "position": "top", // Waybar position (top|bottom|left|right)
    "height": 20, // Waybar height (to be removed for auto height)
    "margin": 0,
    "width": 1280, // Waybar width
    "spacing": 5, // Gaps between modules (4px)
    "border-size": 2,
    "padding": 10,
    "fixed-center": true,
    //"reload_style_on_change": true,
    // Choose the order of the modules
    "modules-left": ["hyprland/workspaces", "custom/player"],
    "modules-center": ["clock"],
    "modules-right": ["pulseaudio", "network", "cpu", "memory", "temperature", "keyboard-state", "battery", "tray"],
    // Modules configuration
    "hyprland/workspaces": {
          "disable-scroll": true,
          "all-outputs": true,
          "warp-on-scroll": false,
          "active-only": false,
          "sort-by-number": true,
          "format": "{name}",
    //    "format-icons": {
    //         "1": "",
    //         "2": "",
    //         "3": "",
    //         "4": "",
    //         "5": "",
    //         "urgent": "",
    //         "focused": "",
    //         "default": ""
    //    }
    }, 

    "keyboard-state": {
        "numlock": true,
        "capslock": true,
        "format": "{name} {icon}",
        "format-icons": {
            "locked": "",
            "unlocked": ""
        }
    },
    "idle_inhibitor": {
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        },
        "toolltip": false,
    },
    "tray": {
        "icon-size": 14,
        "spacing": 14,
    },
    "clock": {
        "interval": 1,
        "format": "{:%a %d %b %H:%M:%S}",
        "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
        "format-alt": "{:%Y-%m-%d}",
    },
    "cpu": {
        "interval": 10,
        "format": "<span size='xx-large'></span>",
        "tooltip-format": "{usage}% {avg_frequency}GHz",
        "states": {
            "critical": 75,
            "high": 40,
            "normal": 0,
        },
    },
    "memory": {
        "interval": 10,
        "format": "<span size='xx-large'></span>",
        "tooltip-format": "{percentage}% {used}G/{total}G\nSwap: {swapPercentage}% {swapUsed}G/{swapTotal}G",
        //"on-click": "htop"
    },
    "temperature": {
        // "thermal-zone": 2,
        // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
        "critical-threshold": 80,
        // "format-critical": "{temperatureC}°C {icon}",
        // "format": "{temperatureC}°C {icon}",
        "format-icons": ["", "", ""],
        "interval": 5,
        "format": "<span size='xx-large'>{icon}</span>",
    },
    "backlight": {
        // "device": "acpi_video1",
        "format": "{percent}% {icon}",
        "format-icons": ["", "", "", "", "", "", "", "", ""]
    },
    "battery": {
        "interval": 10,
        "states": {
            // "good": 95,
            "critical": 15
        },
        "format": "<span size='xx-large'>{icon}</span>",
        "format-charging": "",
        "format-plugged": "",
        "format-time": "{H}:{m}",
        "tooltip-format": "{time} {capacity}%",
        "format-icons": ["", "", "", "", ""]
    },
    "network": {
        // "interface": "wlp2*", // (Optional) To force the use of this interface
        "format-wifi": "<span size='xx-large'></span>",
        "format-ethernet": "{ipaddr}/{cidr} ",
        "tooltip-format": "{ifname}  via:\n{essid}\nIP: {ipaddr}\nGateway: {gwaddr}\nSubnetmask: {netmask}\nStrength (%/dBm): {signalStrength}/{signaldBm}\nByte Speed (D|U): {bandwidthDownBytes} | {bandwidthUpBytes}",
        "format-linked": "{ifname} (No IP) ",
        "format-disconnected": "D/C",
        "interval": 5,
        "on-click": "nm-connection-editor"
    },
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format":                 "<span size='xx-large'>{icon} {format_source}</span>",
        "format-bluetooth":       "<span size='xx-large'>{icon} {format_source}</span>",
        "format-bluetooth-muted": "<span size='xx-large'>{icon}  {format_source}</span>",
        "format-muted":           "<span size='xx-large'>{format_source}</span>",
        "tooltip-format":         "{desc}\n{volume}%",
        "format-source":          "",
        "format-source-muted":    "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", "", ""]
        },
        "on-click": "pavucontrol"
    },
    "custom/media": {
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 40,
        "format-icons": {
            "spotify": "",
            "default": "🎜"
        },
        "escape": true,
        "exec": "$HOME/.config/waybar/mediaplayer.py 2> /dev/null" // Script in resources folder
        // "exec": "$HOME/.config/waybar/mediaplayer.py --player spotify 2> /dev/null" // Filter player based on name
    }
}
