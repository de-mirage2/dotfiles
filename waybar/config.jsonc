// https://github.com/kamlendras/waybar-macos-sequoia/blob/main/config

[
  {
    "layer": "top",
    "position": "top",
    "height": 24,
    "spacing": 14,
    "modules-left": [
      "custom/emblem",
      "hyprland/window",
      "custom/file",
      "custom/edit",
      "custom/view",
      "custom/window",
      "custom/help",
    ],
    "modules-right": [
      // "mpd",
      "tray",
      "idle_inhibitor",
      // "temperature",
      // "cpu",
      // "memory",
      "mpris",
      "network",
      "battery",
      "battery#bat2",
      // "pulseaudio",
      // "backlight",
      // "keyboard-state",
      "clock"
    ],
    "hyprland/window": {
      "format": "{class}",
      "tooltip": false,
      "min-length": 10,
      "justify": "center",
      "rewrite": {
        "^(?!.*\\S).*": "Finder"
      }
    },
    "custom/emblem": {
      "format": "\uf303 ",
      "tooltip": false,
      "on-click": "wofi --show drun",
      "tooltip": false
    },
    "custom/file": {
      "exec": "echo 'File'",
      "tooltip": false,
      "interval": "once",
      "return-type": "plain",
      "on-click": "thunar"
    },
    "custom/edit": {
      "exec": "echo 'Edit'",
      "tooltip": false,
      "interval": "once",
      "return-type": "plain",
      "on-click": "gimp"
    },
    "custom/view": {
      "exec": "echo 'View'",
      "tooltip": false,
      "interval": "once",
      "return-type": "plain"
    },
    "custom/window": {
      "exec": "echo 'Window'",
      "tooltip": false,
      "interval": "once",
      "return-type": "plain",
      // "on-click": "gio open https://github.com/kamlendras/waybar/issues/new"
    },
    "custom/help": {
      "exec": "echo 'Help'",
      "tooltip": false,
      "interval": "once",
      "return-type": "plain",
      "on-click": "gio open https://github.com/Alexays/Waybar/wiki/"
    },
    "keyboard-state": {
      "numlock": true,
      "capslock": true,
      "format": "{name} {icon}",
      "format-icons": {
        "locked": "ÔÄ£",
        "unlocked": "ÔÇú"
      }
    },
    "mpris": {
      "format": "{player_icon}",
      "format-paused": "{status_icon} ~ <i>{title}</i>",
      "player-icons": {
        "default": "‚ñ∂",
        // "mpv": "<big>Û∞ùö</big>"
      },
      "status-icons": {
        "paused": "‚è∏"
      },
      "ignored-players": ["firefox"],
      "interval": 1
    },
    "mpd": {
      "format": "ÔÄÅ  {title} - {artist} {stateIcon} [{elapsedTime:%M:%S}/{totalTime:%M:%S}] {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}[{songPosition}/{queueLength}] [{volume}%]",
      "format-disconnected": "ÔÄÅ Disconnected",
      "format-stopped": "ÔÄÅ {consumeIcon}{randomIcon}{repeatIcon}{singleIcon}Stopped",
      "unknown-tag": "N/A",
      "interval": 2,
      "consume-icons": {
        "on": "ÔÉÑ "
      },
      "random-icons": {
        "on": "ÔÅ¥ "
      },
      "repeat-icons": {
        "on": "ÔÄû "
      },
      "single-icons": {
        "on": "ÔÄû1 "
      },
      "state-icons": {
        "paused": "ÔÅå",
        "playing": "ÔÅã"
      },
      "tooltip-format": "MPD (connected)",
      "tooltip-format-disconnected": "MPD (disconnected)",
      "on-click": "mpc toggle",
      "on-click-right": "foot -a ncmpcpp ncmpcpp",
      "on-scroll-up": "mpc volume +2",
      "on-scroll-down": "mpc volume -2"
    },
    "idle_inhibitor": {
      "format": "{icon}",
      "format-icons": {
        "activated": "ÔÅÆ",
        "deactivated": "ÔÅ∞"
      }
    },
    "tray": {
      "spacing": 14
    },
    "clock": {
      "format": "{:%a %b %d\t%I:%M %p}",
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>"
    },
    "cpu": {
      "format": "Ôãõ "
    },
    "memory": {
      "format": "ÔÉâ "
    },
    "temperature": {
      // "thermal-zone": 2,
      // "hwmon-path": "/sys/class/hwmon/hwmon2/temp1_input",
      "critical-threshold": 60,
      "format": "{icon}",
      "format-tooltip": "{temperatureC}¬∞C",
      "format-icons": [
        "Ôù´",
        "Ôãâ",
        "Ôù©"
      ]
    },
    "backlight": {
      "format": "<big>{icon}</big>",
      "format-icons": [
        "Óéç",
        "Óèì",
        "Óèë",
        "Óèè",
        "Óèé",
        "Óèç",
        "Óèä",
        "Óèà",
        "Óéõ"
      ]
    },
    "battery": {
      "states": {
        "full": 100,
        "sufficient": 80,
        "warning": 20,
        "critical": 10
      },
      "format": "<big>{icon}</big>",
      "format-charging": "Ôóß",
      "format-plugged": "Ôá¶",
      "tooltip-format": "{capacity}%\n{power}W, {time}",
      "format-icons": [
        "ÔâÑ ",
        "ÔâÉ ",
        "ÔâÇ ",
        "ÔâÅ ",
        "ÔâÄ "
      ]
    },
    "battery#bat2": {
      "bat": "BAT2"
    },
    "network": {
        "format-wifi": "<big>\uf1eb </big>",
        "format-ethernet": "Ôûñ ",
        "tooltip-format": "{ifname} Ôûñ via:\n{essid}\nIP: {ipaddr}\nGateway: {gwaddr}\nSubnetmask: {netmask}\nStrength (%/dBm): {signalStrength}/{signaldBm}\nByte Speed (D|U): {bandwidthDownBytes} | {bandwidthUpBytes}",
        "format-linked": "{ifname} (No IP) Ôûñ ",
        "format-disconnected": "Ôïß",
        "interval": 5,
        "on-click": "nm-connection-editor"
    },
    "pulseaudio": {
      "scroll-step": 5,
      "format": "{icon}  {volume}% {format_source}",
      "format-bluetooth": "Ôäî{icon} {volume}% {format_source}",
      "format-bluetooth-muted": "Ôö© Ôäî {icon} {format_source}",
      "format-muted": "Ôö©  {format_source}",
      "format-source": "ÔÑ∞ {volume}%",
      "format-source-muted": "ÔÑ±",
      "format-icons": {
        "default": [
          "ÔÄ¶",
          "ÔÄß",
          "ÔÄ®"
        ]
      },
      "on-click": "pavucontrol",
      "on-click-right": "foot -a pw-top pw-top"
    }
  },
    {
    "layer": "bottom",
    "position": "bottom",
    "mod": "dock",
    "exclusive": false,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 41,
    "width": 2,
    "modules-left": [
      "custom/os_button"
    ],
    "modules-center": [
      "wlr/taskbar"
    ],
    "margin": "4",
    "spacing": "5",
    "sway/window": {
      "max-length": 50
    },
    "custom/os_button": {
      "format": "üîç",
      "on-click": "wofi --show drun",
      "tooltip": false
    },
    "wlr/taskbar": {
      "format": "{icon}",
      "icon-size": 36,
      "spacing": 3,
      "on-click-middle": "close",
      "tooltip-format": "{title}",
      "ignore-list": [],
      "on-click": "activate"
    }
  }
]
